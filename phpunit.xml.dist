<?xml version="1.0"?>
<phpunit
	bootstrap="tests/bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>

	<testsuites>
		<testsuite name="site-counts">
			<directory suffix=".php">./tests/php/</directory>
			<exclude>./tests/php/TestCase.php</exclude>
		</testsuite>
	</testsuites>

	<filter>
		<whitelist processUncoveredFilesFromWhitelist="false">
			<directory suffix=".php">./</directory>
			<exclude>
				<file>./site-counts.php</file>
				<directory suffix=".php">./node_modules</directory>
				<directory suffix=".php">./tests</directory>
				<directory suffix=".php">./vendor</directory>
				<directory suffix=".php">./package</directory>
			</exclude>
		</whitelist>
	</filter>

	<logging>
		<log type="coverage-html" target="tests/coverage/php" />
		<log type="coverage-clover" target="tests/coverage/php/clover.xml" />
		<log type="coverage-text" target="php://stdout" />
	</logging>
</phpunit>
